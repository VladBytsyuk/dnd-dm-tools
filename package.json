{
	"name": "dnd-dm-tools",
	"version": "0.5.0",
	"description": "A plugin for Obsidian.md with DnD 5e DM tools in russian.",
	"main": "main.js",
	"scripts": {
		"dev": "npm run copy:assets && node esbuild.config.mjs",
		"build": "npm run copy:assets && tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"copy:assets": "shx cp node_modules/sql.js/dist/sql-wasm.wasm ./sql-wasm.wasm",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"svelte-check": "svelte-check --tsconfig tsconfig.json",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:cov": "vitest run --coverage"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@testing-library/dom": "^10.4.1",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^20.19.11",
		"@types/sql.js": "^1.4.9",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"@vitest/coverage-v8": "^1.6.1",
		"builtin-modules": "3.3.0",
		"esbuild": "^0.25.0",
		"esbuild-svelte": "^0.9.0",
		"jsdom": "^26.1.0",
		"obsidian": "latest",
		"shx": "^0.4.0",
		"svelte": "^5.38.1",
		"svelte-check": "^4.1.4",
		"svelte-preprocess": "^6.0.3",
		"tslib": "2.4.0",
		"typescript": "^5.9.2",
		"vitest": "^1.6.1"
	},
	"dependencies": {
		"lucide-svelte": "^0.477.0",
		"sql.js": "^1.13.0",
		"yaml": "^2.7.0"
	}
}
